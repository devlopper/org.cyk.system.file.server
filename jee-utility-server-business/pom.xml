<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.cyk.pom.jee.utility.server.business</groupId>
		<artifactId>pom-jee-utility-server-business</artifactId>
		<version>pom.jee.utility.server.business.0.0.1</version>
	</parent>

	<groupId>org.cyk.jee.utility.server.business</groupId>
	<artifactId>jee-utility-server-business</artifactId>
	<version>0.0.1</version>
	<packaging>jar</packaging>

	<name>JEE utility server business</name>

	<properties>
		<wildfly.swarm.bom.version>2017.2.0</wildfly.swarm.bom.version>
	</properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.wildfly.swarm</groupId>
				<artifactId>bom-all</artifactId>
				<version>${wildfly.swarm.bom.version}</version>
				<scope>import</scope>
				<type>pom</type>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<dependency>
			<groupId>org.cyk.jee.utility</groupId>
			<artifactId>jee-utility</artifactId>
			<version>0.0.1</version>
		</dependency>
		
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>compile</scope>
		</dependency>

		<dependency>
			<groupId>org.jboss.arquillian.junit</groupId>
			<artifactId>arquillian-junit-container</artifactId>
			<scope>compile</scope>
		</dependency>
		
		<dependency>
		    <groupId>org.jboss.shrinkwrap.resolver</groupId>
		    <artifactId>shrinkwrap-resolver-impl-maven</artifactId>
		    <scope>compile</scope>
		</dependency>
		
		<!--dependency>
			<groupId>org.cyk.pom.jee.utility.test.jboss.swarm</groupId>
			<artifactId>pom-jee-utility-test-jboss-swarm</artifactId>
			<type>pom</type>
			<version>0.0.1</version>
			<scope>test</scope>
		</dependency-->
		
		<dependency>
			<groupId>org.wildfly.swarm</groupId>
			<artifactId>arquillian</artifactId>
			<scope>test</scope>
		</dependency>
		
		<dependency>
			<groupId>com.h2database</groupId>
			<artifactId>h2</artifactId>
			<version>1.4.197</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>org.cyk.jee.utility.server.persistence</groupId>
			<artifactId>jee-utility-server-persistence</artifactId>
			<version>0.0.1</version>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>org.cyk.test</id>
			<properties>
				<org.cyk.test.swarm.project.defaults.file>org/cyk/utility/server/business/project-defaults.yml</org.cyk.test.swarm.project.defaults.file>
				<org.cyk.test.jpa.persistence.file>org/cyk/utility/server/business/persistence.xml</org.cyk.test.jpa.persistence.file>
				<org.cyk.test.classes>org.cyk.utility.server.business.MyEntity</org.cyk.test.classes>
			</properties>
		</profile>
	</profiles>

</project>
