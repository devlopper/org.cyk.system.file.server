<?xml version="1.0" encoding="UTF-8"?>
<!--
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0" metadata-complete="true">
-->

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
		
	<display-name>${cyk.variable.system.name}</display-name>
	
	<!-- System -->
	
	<context-param>
		<param-name>cyk.variable.system.identifier</param-name>
		<param-value>${cyk.variable.system.identifier}</param-value>
	</context-param>
	
	<context-param>
		<param-name>cyk.variable.system.name</param-name>
		<param-value>${cyk.variable.system.name}</param-value>
	</context-param>
	
	<context-param>
		<param-name>cyk.variable.system.version</param-name>
		<param-value>${cyk.variable.system.version}</param-value>
	</context-param>
	
	<context-param>
		<param-name>cyk.variable.system.timestamp</param-name>
		<param-value>${cyk.variable.system.timestamp}</param-value>
	</context-param>
	
	<context-param>
		<param-name>cyk.variable.system.timestamp.as.string</param-name>
		<param-value>${cyk.variable.system.timestamp.as.string}</param-value>
	</context-param>
	
	<context-param>
		<param-name>cyk.variable.system.uri.scheme</param-name>
		<param-value>${cyk.variable.system.uri.scheme}</param-value>
	</context-param>
	
	<context-param>
		<param-name>cyk.variable.system.uri.host</param-name>
		<param-value>${cyk.variable.system.uri.host}</param-value>
	</context-param>
	
	<context-param>
		<param-name>cyk.variable.system.host</param-name>
		<param-value>${cyk.variable.system.host}</param-value>
	</context-param>
	
	<context-param>
		<param-name>cyk.variable.system.uri.port</param-name>
		<param-value>${cyk.variable.system.uri.port}</param-value>
	</context-param>
	
	<context-param>
		<param-name>cyk.variable.system.port</param-name>
		<param-value>${cyk.variable.system.port}</param-value>
	</context-param>
	
	<context-param>
		<param-name>cyk.variable.system.uri.context</param-name>
		<param-value>${cyk.variable.system.uri.context}</param-value>
	</context-param>
	
	<context-param>
		<param-name>cyk.variable.system.web.context</param-name>
		<param-value>${jboss-web.context-root}</param-value>
	</context-param>	
	
	<context-param>
		<param-name>cyk.variable.request.read.page.url</param-name>
		<param-value>${cyk.variable.request.read.page.url}</param-value>
	</context-param>
	
	<context-param>
		<param-name>cyk.variable.request.report.identifier</param-name>
		<param-value>${cyk.variable.request.report.identifier}</param-value>
	</context-param>	
	
	<context-param>
		<param-name>cyk.variable.system.logging.throwable.print.stack.trace</param-name>
		<param-value>${cyk.variable.system.logging.throwable.print.stack.trace}</param-value>
	</context-param>
	
	<context-param>
		<param-name>cyk.variable.protocol.simple.mail.transfer.enabled</param-name>
		<param-value>${cyk.variable.protocol.simple.mail.transfer.enabled}</param-value>
	</context-param>
	
	<!-- keycloak Server -->
	
	<context-param>
		<param-name>cyk.variable.keycloak.enabled</param-name>
		<param-value>${cyk.variable.keycloak.enabled}</param-value>
	</context-param>
	
	<context-param>
		<param-name>cyk.variable.keycloak.client.identifier</param-name>
		<param-value>${cyk.variable.keycloak.client.identifier}</param-value>
	</context-param>
	
	<context-param>
		<param-name>cyk.variable.keycloak.client.secret</param-name>
		<param-value>${cyk.variable.keycloak.client.secret}</param-value>
	</context-param>
	
	<context-param>
		<param-name>cyk.variable.keycloak.credential.password</param-name>
		<param-value>${cyk.variable.keycloak.credential.password}</param-value>
	</context-param>
	
	<context-param>
		<param-name>cyk.variable.keycloak.credential.username</param-name>
		<param-value>${cyk.variable.keycloak.credential.username}</param-value>
	</context-param>
	
	<context-param>
		<param-name>cyk.variable.keycloak.realm.name</param-name>
		<param-value>${cyk.variable.keycloak.realm.name}</param-value>
	</context-param>
	
	<context-param>
		<param-name>cyk.variable.keycloak.server.url</param-name>
		<param-value>${cyk.variable.keycloak.server.url}</param-value>
	</context-param>
	
	<!-- Swagger -->
	
	<context-param>
		<param-name>cyk.variable.swagger.enabled</param-name>
		<param-value>true</param-value>
	</context-param>
	
	<context-param>
		<param-name>cyk.variable.swagger.bean.config.resource.package</param-name>
		<param-value>org.cyk.utility.server.representation,org.cyk.utility.server.representation.impl,org.cyk.system.file.server.representation.api</param-value>
	</context-param>
</web-app>