<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	
	<persistence-unit name="unitTest" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<!-- classes -->
		<class>org.cyk.utility.common.persistence.jpa.EntityWithoutExtendsAndAccessIsField</class>
		<class>org.cyk.utility.common.persistence.jpa.EntityWithoutExtendsAndAccessIsProperty</class>
		<class>org.cyk.utility.common.persistence.jpa.EntityWithoutExtendsAndAccessIsMixed</class>
		
		<class>org.cyk.utility.common.persistence.jpa.EntityWithExtendsAndMethodAnnotated</class>
		<!-- properties will be added at runtime -->
		
	</persistence-unit>
</persistence>